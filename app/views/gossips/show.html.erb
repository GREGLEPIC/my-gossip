<div class="card text-center mb-3 mx-auto mt-5" style="width: 400px;">
  <div class="card-body">
    <h5 class="card-title"> <%= @gossip.title%> </h5>
    <p class="card-text"> <%= @gossip.content%> </p>
    <p class="card-text"> <%= @gossip.user.first_name%> <%= @gossip.user.last_name%> </p>
    <p class="card-text"> <%= @gossip.user.city.name%> </p>
    <p class="card-text"> <%= @gossip.created_at%> </p>
    <a href="<%= user_path %>" class="btn btn-primary"> Page de l'auteur</a>
    <br></br>
    <a href="<%= city_path %>" class="btn btn-primary"> Page de la ville</a>
    <br></br>
    <a href="<%= gossip_path(@gossip.id) %>" class="btn btn-danger" data-confirm="Etes-vous sur?">Supprimer le gossip</a>
  </div>
</div>